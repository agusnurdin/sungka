<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/greenboard" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Player 2 Side"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/p1pit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="96dp"
                android:layout_marginLeft="109dp"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p1pit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/p1pit1"
                android:layout_alignBottom="@+id/p1pit1"
                android:layout_marginLeft="38dp"
                android:layout_toRightOf="@+id/p1pit1"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p1pit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/p1pit2"
                android:layout_alignBottom="@+id/p1pit2"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/p1pit2"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p1pit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/p1pit3"
                android:layout_alignBottom="@+id/p1pit3"
                android:layout_centerHorizontal="true"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p1pit5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/p1pit4"
                android:layout_alignBottom="@+id/p1pit4"
                android:layout_marginLeft="39dp"
                android:layout_toRightOf="@+id/p1pit4"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p1pit6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/p1pit5"
                android:layout_alignBottom="@+id/p1pit5"
                android:layout_marginLeft="38dp"
                android:layout_toRightOf="@+id/p1pit5"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p1pit7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/p1pit6"
                android:layout_alignBottom="@+id/p1pit6"
                android:layout_marginLeft="38dp"
                android:layout_toRightOf="@+id/p1pit6"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p2pit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/p1pit7"
                android:layout_alignLeft="@+id/p1pit7"
                android:layout_marginBottom="27dp"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p2pit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/p2pit1"
                android:layout_alignBottom="@+id/p2pit1"
                android:layout_alignLeft="@+id/p1pit6"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p2pit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/p2pit2"
                android:layout_alignBottom="@+id/p2pit2"
                android:layout_alignLeft="@+id/p1pit5"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p2pit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/p2pit3"
                android:layout_alignBottom="@+id/p2pit3"
                android:layout_alignLeft="@+id/p1pit4"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p2pit5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/p2pit4"
                android:layout_alignBottom="@+id/p2pit4"
                android:layout_alignLeft="@+id/p1pit3"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p2pit6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/p2pit5"
                android:layout_alignBottom="@+id/p2pit5"
                android:layout_alignLeft="@+id/p1pit2"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p2pit7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/p2pit6"
                android:layout_alignBottom="@+id/p2pit6"
                android:layout_alignLeft="@+id/p1pit1"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="23dp"
                android:text="Player 1 Side"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtTurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignRight="@+id/textView1"
                android:text="Turn of Player"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/wintext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/wintext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/wintext2"
                android:layout_alignParentTop="true"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/p2pitmain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtTurn"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/p1pitmain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/p1pit7"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>